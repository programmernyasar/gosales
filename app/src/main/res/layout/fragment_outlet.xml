<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="id.co.olaga.gosales.tabswipe.outlet"
    android:background="@color/colorPrimaryDark">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <EditText
                            android:id="@+id/nm_toko"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp"
                            android:padding="13dp"
                            android:singleLine="true"
                            android:hint="Nama Toko"
                            android:background="@drawable/bdedittext"
                            android:inputType="textCapCharacters"
                            />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp">

                        <EditText
                            android:id="@+id/alm_toko"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine|textCapCharacters"
                            android:lines="8"
                            android:maxLines="10"
                            android:minLines="6"
                            android:scrollbars="vertical"
                            android:background="@drawable/bdedittext"
                            android:hint="Alamat"
                            android:gravity="left|top"
                            android:padding="13dp"
                            android:layout_marginBottom="15dp"
                     />

                    </android.support.design.widget.TextInputLayout>

                    <Spinner
                        android:id="@+id/kota_outlet"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:popupBackground="#ffffff"
                        android:layout_marginBottom="15dp"
                        android:entries="@array/kota">
                    </Spinner>



                    <Spinner
                        android:id="@+id/tipe_outlet"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:popupBackground="#ffffff"
                        android:layout_marginBottom="15dp"
                        android:entries="@array/tipetoko">
                    </Spinner>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <EditText
                            android:id="@+id/tel_toko"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp"
                            android:padding="13dp"
                            android:singleLine="true"
                            android:inputType="phone"
                            android:hint="Telepon"
                            android:background="@drawable/bdedittext"

                            />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <EditText
                            android:id="@+id/hp_toko"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp"
                            android:padding="13dp"
                            android:singleLine="true"
                            android:inputType="phone"
                            android:hint="Hp"
                            android:background="@drawable/bdedittext"

                            />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <EditText
                            android:id="@+id/fax_toko"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp"
                            android:padding="13dp"
                            android:singleLine="true"
                            android:inputType="phone"
                            android:hint="Fax"
                            android:background="@drawable/bdedittext"

                            />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>


            </ScrollView>


</FrameLayout>
